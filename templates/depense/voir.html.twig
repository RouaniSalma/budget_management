{# templates/depense/voir.html.twig #}
<style>
/* Style for the expense details page */
h1 {
    font-size: 19px;
    color: #333;
    text-align: center;
    margin-bottom: 15px;
}

body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background-color: #2f4f4f;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 300px; /* Largeur fixe */
    height: 230px; /* Hauteur fixe */
    border: 1px solid #ddd;
    background-color: #ffffff;
    border-radius: 5px; /* Bordure pour visualiser le conteneur */
    transform: scale(1.6); /* Ajustez la valeur pour zoomer plus ou moins */ 
    transform-origin: center;
}


table {
    border-collapse: collapse;
    margin: 0 auto;
}

th {
    background-color: #00695c; /* Dark green color */
    color: white;
    font-weight: bold;
}

td {
    background-color: #fff;
}

a {
    display: inline-block;
    margin-top: 20px;
    color: #2b3635;
    border-radius: 5px;
    font-size: 18px;
    text-align: center;
}

table {
    width: 80%;
    /*border-collapse: collapse;*/
    margin-bottom: 30px;
}

table, th, td {
    border: 1px solid black;
    padding: 5px;
    text-align: center;
}

th, td {
    white-space: nowrap;
}
.back-button {
            position: absolute;
            bottom: 12.5px;  /* Place le bouton en bas du conteneur */
            left: 12.4%;/* Centre le bouton horizontalement */
            transform: translateX(-50%); /* Ajuste la position pour centrer le bouton */
            background-color:#A8E6CF; /* Couleur grise pour le bouton */
            color: white; /* Texte blanc */
            border: none;
            padding: 5px 5px; /* Espacement autour du texte */
            border-radius: 5px; /* Coins arrondis */
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 15px;
            height: 15px;
        }

        .back-button img {
            width: 15px; /* Taille de l'icône de flèche */
            height: 15px;
            margin-bottom: 1px;
        }
        .back-button:hover{
            background-color:#D4AF37;
        }
</style>

<div class="container">
    <h1>Détails de la dépense</h1>

    <table>
        <tr>
            <th>Catégorie</th>
            <td>{{ depense.categorie }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ depense.description }}</td>
        </tr>
        <tr>
            <th>Montant</th>
            <td>{{ depense.montant }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ depense.dateDepense ? depense.dateDepense|date('d-m-Y') : '' }}</td>
        </tr>
    </table>

       <a href="{{ path('depense_liste') }}" class="back-button">
           <img src="https://img.icons8.com/ios-filled/50/ffffff/left.png" alt="Retour"> <!-- Icône de flèche -->
        </a>
</div>
