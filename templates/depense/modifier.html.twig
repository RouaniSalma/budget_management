{# templates/depense/modifier.html.twig #}
<style>
/* Style for the expense modification page */
h1 {
    font-size: 24px;
    color: #000000;
    text-align: center;
    margin-bottom: 20px;
}
body {
    background-color: #2f4f4f;
}

form {
    width: 100%;
    max-width: 600px;
    margin: 170px auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background-color: #f9f9f9;
    transform: scale(1.2); /* Ajustez la valeur pour zoomer plus ou moins */ 
    transform-origin: center;
}

label {
    display: block;
    margin-bottom: 10px;
    font-weight: bold;
    color: #00695c; /* Dark green color */
}

input[type="text"],
input[type="number"],
input[type="date"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid #ddd;
    border-radius: 5px;
    box-sizing: border-box;
}

button {
    width: auto; /* Adjust the width as needed */
    padding: 10px;
    background-color: #D4AF37; /* Green color */
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
    display: block; /* Ensure the button is displayed as a block element */
    margin: 0 auto; /* Center the button horizontally */
}

button:hover {
    background-color: #00796b;
}


a {
    display: inline-block;
    margin-top: 20px;
    padding: 10px 20px;
    color: #00796b;
    font-size: 18px;
    border-radius: 5px;
}


.back-button {
            position: absolute;
            bottom: 10.5px;  /* Place le bouton en bas du conteneur */
            left: 5.8%;/* Centre le bouton horizontalement */
            transform: translateX(-50%); /* Ajuste la position pour centrer le bouton */
            background-color:#A8E6CF; /* Couleur grise pour le bouton */
            color: white; /* Texte blanc */
            border: none;
            padding: 10px 10px; /* Espacement autour du texte */
            border-radius: 5px; /* Coins arrondis */
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 18px;
            height: 18px;
        }

        .back-button img {
            width: 16px; /* Taille de l'icône de flèche */
            height: 16px;
            margin-bottom: 1px;
        }
        .back-button:hover{
            background-color:#D4AF37;
        }
</style>


<form method="POST">
<h1>Modifier la dépense</h1>
    <label for="categorie">Catégorie :</label>
    <input type="text" id="categorie" name="categorie" value="{{ depense.categorie }}" required>

    <label for="description">Description :</label>
    <input type="text" id="description" name="description" value="{{ depense.description }}" required>

    <label for="montant">Montant :</label>
    <input type="number" id="montant" name="montant" value="{{ depense.montant }}" required>

    

    <label for="date_depense">Date de Dépense :</label>
    <input type="date" id="date_depense" name="date_depense" value="{{ depense.dateDepense ? depense.dateDepense|date('Y-m-d') : '' }}" required>

    <button type="submit">Modifier la dépense</button>
    <a href="{{ path('depense_liste') }}" class="back-button">
           <img src="https://img.icons8.com/ios-filled/50/ffffff/left.png" alt="Retour"> <!-- Icône de flèche -->
        </a>
</form>


